<!DOCTYPE html>
<html>
<head>
  <title>Online linter (op-desafios)</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>

<!-- Ace -->
<style type="text/css" media="screen">
  #editorContainer {
      width: 80vw;
      height: 60vh;
      position: relative;
      background-color: #aaa;
  }
  #editor {
      font: 14px/normal 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', 'monospace';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
  }
</style>
<body>
  <div class="container">
    <div class="col-md-10 col-lg-10 p-2">
      <div class="pb-2 mt-4 mb-2 border-bottom">
        <h1>Online Linter (op-desafios)</h1>
      </div>

      <form id="codeform">
        <div class="form-group">
          <label for="languageSelect">Selecione a Linguagem</label>
          <select class="form-control" id="languageSelect">
            {{range .Languages}}<option>{{.}}</option>{{end}}
          </select>
        </div>

        <div id="editorContainer" class="col-md-12 col-lg-12">
          <div id="editor"></div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top:10px;" onclick="lint(); return false">Submit</button>
        <!-- note: return false after the function call above is needed to avoid a refresh -->
      </form>
      <p>

      <!-- results -->
      <div class="alert alert-success col-md-12 col-lg-12" id="results_ok" style="display:none;"></div>
      <div class="alert alert-danger  col-md-12 col-lg-12" id="results_bad" style="display:none;"></div>
    </div>
  </div>

  <script src="//ajaxorg.github.io/ace-builds/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
  <script>
    var editor = ace.edit("editor");
    editor.getSession().setUseWorker(false);
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/golang");
  </script>

  <script>
    function lint() {
      var xhttp = new XMLHttpRequest();
      xhttp.open("POST", "{{.LintPath}}", true);

      xhttp.onreadystatechange = function() {
        if (this.readyState == 4) {
          if (this.status == 200) {
            var res = JSON.parse(this.responseText);

            if (res.Pass == true) {
              eid = "results_ok";
              msg = "No errors found!";
            } else {
              eid = "results_bad";
              msg = res.ErrorMessages.join("<br>");
            }
          }
          else {
            eid = "results_bad";
            msg = "Request failed: " + this.responseText;
          }

          document.getElementById("results_ok").style.display = "none";
          document.getElementById("results_bad").style.display = "none";
          document.getElementById(eid).style.display = "block";
          document.getElementById(eid).innerHTML = msg;
        }
      };

      // Send
      let programText64 = encodeURIComponent(editor.getValue());

      const form = document.getElementById("codeform");
      let lang = form.elements["languageSelect"].value;

      let req = JSON.stringify({"lang": lang, "text": programText64});
      xhttp.setRequestHeader("Content-type", "application/json");
      xhttp.send(req)
    }
  </script>
</body>
</html>
